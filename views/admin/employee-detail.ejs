<style>
    .employee-detail {
        font-family: 'Poppins';
        font-weight: 500;
        margin-top: 10px;
        color: white;
    }

    .btn-danger {
        background-color: red !important;
    }

    .btn-success {
        background-color: #32CD32 !important;
    }

    .card-body {
        font-family: 'Poppins';
    }

    .detail-title {
        font-family: 'Poppins';
        font-weight: 500;
    }
</style>

<div class="container align-items-center">
    <div class="card mt-5">
        <div class="card-header bg-primary">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="employee-detail">Employee Detail</h5>
                </div>
                <div>
                    <a class="btn btn-success" href="/admin/employee-list/edit/<%=params%>"><i class="fa-solid fa-pen"></i></a>
                    <a class="btn btn-danger" href="/admin/employee-list/delete/<%=params%>"><i class="fa-solid fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row g-0">
          <div class="col-md-4">
            <img src="/default-pic.png" class="img-fluid rounded-start" alt="employee photo">
          </div>
          <div class="col-md-8">
            <div class="card-body">
                <% getDetail.forEach(employee => { %>
                    <p><span class="detail-title">ID :</span> <%= employee.id %> </p>
                    <p><span class="detail-title">Name :</span> <%= employee.name %> </p>
                    <p><span class="detail-title">Email :</span> <%= employee.email %> </p>
                    <p><span class="detail-title">Contact No. :</span> <%= employee.mobile %> </p>
                <% }) %>
            </div>
          </div>
        </div>
    </div>
</div>