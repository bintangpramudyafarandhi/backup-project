<style>
    .edit-employee {
        font-family: 'Poppins';
        font-weight: 600;
    }

    .form-label {
        font-family: 'Poppins';
    }

    .button-label {
        font-family: 'Poppins';
    }
    
    input {
        font-family: 'Poppins';
    }
</style>

<div class="container">
<h1 class="edit-employee mt-3">Edit Employee</h1>

<svg xmlns="http://www.w3.org/2000/svg" style="display: none">
    <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
        <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

<% if (typeof errors !='undefined' ) { %>
    <div class="alert alert-danger d-flex align-items-center w-25 container" role="alert">
        <ul>
            <% errors.forEach(err=> { %>
                <li>
                    <svg class="bi flex-shrink-0" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                    </svg>
                    <%= err.msg %>
                </li>
            <% }) %>
        </ul>
    </div>
<% } %>


<form class="edit-form" action="/admin/employee-list/edit/<%=params%>" method="post">
    <div class="mb-1">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" value="<%=getDetail.name%>" class="form-control" id="name" required/>
    </div>
    <div class="mb-1">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" value="<%=getDetail.email%>" class="form-control" id="email" required/>
    </div>
    <div class="mb-2">
        <label for="mobile" class="form-label">Phone No.</label>
        <input type="tel" name="mobile" value="<%=getDetail.mobile%>" class="form-control" id="mobile" required/>
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <div>
          <a href="/admin/employee-list" class="btn btn-danger button-label">Cancel</a>
        </div>
        <div>
          <button type="submit" class="btn btn-primary button-label">Submit</button>
        </div>
    </div>
</form>
</div>